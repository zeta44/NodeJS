    <title>Boletim</title>
</head>

<body>
    <section class="container">
        <div class="row">
            <div class="col">
                <div class="row mt-5">
                    <div class="col-6"> 
                        <h1>Boletim dos Alunos</h1>
                    </div>
                    <div class="col-6">
                        <a href="/cadastro" class="btn btn-primary">Cadastrar Notas</a>
                    </div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Nota1</th>
                                <th>Nota2</th>
                                <th>Nota3</th>
                                <th>MÃ©dia</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% itens.forEach(function(aluno){ %>
                            <tr>
                                <td><%= aluno.nome %></td>
                                <td><%= aluno.nota1 %></td>
                                <td><%= aluno.nota2 %></td>
                                <td><%= aluno.nota3 %></td>
                                <td><%= aluno.media %></td>
                            </tr>
                            
                            <% }) %>
                        </tbody>
                    </table>
                    
                </div>
            </div>
        </div>
    </section>






